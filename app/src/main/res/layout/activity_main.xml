<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.helpmeplease.helpmeplease.Activity.Main">

    <TextView
        android:layout_gravity="center"
        android:id="@+id/headlogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:paddingTop="100dp"
        android:text="Help Me Please"
        android:textColor="#565454"
        android:textSize="30dp"
        android:textStyle="bold"
       />

    <ImageView
        android:layout_gravity="center"
        android:id="@+id/logo"
        android:layout_width="321dp"
        android:layout_height="115dp"
        android:src="@drawable/hold"
        />


    <Button
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:id="@+id/btnWelcom"
        android:text="@string/wellcom"
        android:layout_width="100dp"
        android:layout_height="wrap_content"

        />

</LinearLayout>
